       function chatStarten() {
          
          var bereit = false;
          
          var vorname =  $("#vorname").val();  if ((vorname == "")  || (vorname  == "Ihr Vorname"))         { vorname  = false; } else { Cookies.set('BewerbotVorname',  vorname); }
